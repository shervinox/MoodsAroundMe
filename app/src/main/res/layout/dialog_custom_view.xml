<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="30dp">

    <EditText
        android:id="@+id/name_of_buddy_edittext"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:hint="Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/year_edittext"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:hint="1985"

        android:inputType="number"
        android:maxLength="4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_of_buddy_edittext" />

    <EditText
        android:id="@+id/month_edittext"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="01"
        android:inputType="number"
        android:maxLength="2"
        app:layout_constraintLeft_toRightOf="@id/year_edittext"
        app:layout_constraintTop_toBottomOf="@id/name_of_buddy_edittext" />

    <EditText
        android:id="@+id/day_edittext"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:hint="01"
        android:inputType="number"
        android:maxLength="2"
        app:layout_constraintLeft_toRightOf="@id/month_edittext"
        app:layout_constraintTop_toBottomOf="@id/name_of_buddy_edittext" />


</android.support.constraint.ConstraintLayout>